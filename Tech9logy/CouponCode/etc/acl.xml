<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::couponcode_elements" title="Tech9logy CouponCode">
                    <resource id="Tech9logy_CouponCode::rule" title="Rule" sortOrder="10">
                        <resource id="Tech9logy_CouponCode::rule_edit" title="Edit Rule" sortOrder="10" />
                        <resource id="Tech9logy_CouponCode::rule_save" title="Save Rule" sortOrder="20" />
                        <resource id="Tech9logy_CouponCode::rule_delete" title="Delete Rule" sortOrder="30" />
                    </resource>
                    <resource id="Tech9logy_CouponCode::generate" title="Generation" sortOrder="20"/>
                    <resource id="Tech9logy_CouponCode::coupon" title="List Coupons" sortOrder="30">
                        <resource id="Tech9logy_CouponCode::coupon_delete" title="Delete Coupon" sortOrder="10" />
                        <resource id="Tech9logy_CouponCode::coupon_save" title="Save Coupon" sortOrder="20" />
                        <resource id="Tech9logy_CouponCode::coupon_edit" title="Edit Coupon" sortOrder="30" />
