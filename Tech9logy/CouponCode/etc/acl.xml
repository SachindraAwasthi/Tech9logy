                    </resource>
                    <resource id="Tech9logy_CouponCode::log" title="Logs Coupons" sortOrder="35">
                        <resource id="Tech9logy_CouponCode::log_delete" title="Delete Coupon Log" sortOrder="10" />
                        <resource id="Tech9logy_CouponCode::log_save" title="Save Coupon Log" sortOrder="20" />
                        <resource id="Tech9logy_CouponCode::log_edit" title="Edit Coupon Log" sortOrder="30" />
                    </resource>
                    <resource id="Tech9logy_CouponCode::report" title="Report Sales By Coupons" sortOrder="40"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Tech9logy_CouponCode::config_couponcode" title="Tech9logy Coupon Code" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
